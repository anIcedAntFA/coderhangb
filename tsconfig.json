{
	"compilerOptions": {
		"baseUrl": ".",
		"isolatedModules": true,
		"jsx": "preserve",
		"paths": {
			"@/*": ["src/*"]
		},
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"skipLibCheck": true,
		"strictNullChecks": true,
		"verbatimModuleSyntax": true
	},
	"exclude": ["dist"],
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*", "shims.d.ts"]
}
