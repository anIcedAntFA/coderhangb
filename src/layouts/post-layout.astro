---
import BaseHead from '@/components/base-head.astro';
import { Datetime } from '@/components/datetime';
import { formatPostDatetime } from '@/components/datetime/datetime.lib';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';

import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, publishedDate, modifiedDate, image } = Astro.props;

const formattedDate = formatPostDatetime({
	pubDatetime: publishedDate,
	modDatetime: modifiedDate,
});
---

<html lang='en'>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class='hero-image'>
					{image && <Image width={1020} height={510} src={image} alt='' />}
				</div>
				<div class='prose'>
					<div class='title'>
						<div class='date'>
							<Datetime {...formattedDate} />
							<!-- {
								modifiedDate && (
									<div class='last-updated-on'>
										Last updated on <FormattedDate date={modifiedDate} />
									</div>
								)
							} -->
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
